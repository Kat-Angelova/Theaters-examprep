
        <main>
            <form class="theater-form" action="/play/edit/{{_id}}" method="POST">
                <h1>Edit Theater</h1>
                <div>
                    <label for="title">Theater Title:</label>
                    <input type="text" placeholder="Theater name"value="{{title}}">
                </div>
                <div>
                    <label for="description">Theater Description:</label>
                    <textarea placeholder="Description" >{{description}}</textarea>
                </div>
                <div>
                    <label for="imageUrl">Image url:</label>
                    <input type="text" placeholder="Image Url" value="{{imageUrl}}">
                </div>
                <div class="check">
                    <input type="checkbox" id="check-box" {{#if public}}checked{{/if}}>
                    <label for="check-box">Public</label>
                </div>
                <button class="btn" type="submit">Submit</button>
            </form>
        </main>
